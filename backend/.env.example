# ⚙️ Configuración del Proyecto Django

# Seguridad
SECRET_KEY=django-insecure-tu-secret-key-aqui-cambia-en-produccion

# Debug Mode
DEBUG=True

# Base de Datos
# PostgreSQL (recomendado)
DATABASE_URL=postgresql://usuario:contraseña@localhost:5432/django_tienda

# Alternativa: SQLite (desarrollo local)
# DATABASE_URL=sqlite:///db.sqlite3

# CORS - Permitir frontend
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Email (para futuras funcionalidades)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-contraseña-app

# Otras variables opcionales
ALLOWED_HOSTS=localhost,127.0.0.1
